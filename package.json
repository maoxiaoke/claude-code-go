{
	"name": "claude-go",
	"version": "0.1.0",
	"description": "A quick launcher for Claude",
	"type": "module",
	"bin": {
		"claude-go": "./dist/cli.js",
		"cg": "./dist/cli.js"
	},
	"main": "./dist/index.js",
	"exports": {
		".": "./dist/index.js",
		"./cli": "./dist/cli.js"
	},
	"files": [
		"dist"
	],
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"dev": "tsx src/cli.ts",
		"build": "tsup",
		"clean": "rimraf dist",
		"lint": "eslint .",
		"format": "prettier --write .",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"prepare": "husky install",
		"release": "changeset",
		"release:version": "changeset version",
		"prepack": "npm run build"
	},
	"keywords": [
		"cli",
		"node",
		"typescript",
		"commander",
		"tooling"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"chalk": "^5.3.0",
		"commander": "^12.1.0",
		"consola": "^3.2.3",
		"cosmiconfig": "^9.0.0",
		"ora": "^8.0.1",
		"prompts": "^2.4.2",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@types/node": "^22.0.0",
		"@changesets/cli": "^2.27.7",
		"@commitlint/cli": "^19.4.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@typescript-eslint/eslint-plugin": "^8.7.0",
		"@typescript-eslint/parser": "^8.7.0",
		"@vitest/coverage-v8": "^2.1.3",
		"eslint": "^9.12.0",
		"eslint-config-prettier": "^9.1.0",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"prettier": "^3.3.3",
		"rimraf": "^6.0.1",
		"tsup": "^8.1.0",
		"tsx": "^4.19.0",
		"typescript": "^5.6.3",
		"vitest": "^2.1.3"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,mjs,cjs}": [
			"eslint --fix"
		],
		"*.{json,md,yml,yaml,css,scss,ts,tsx,js,jsx}": [
			"prettier --write"
		]
	}
}
